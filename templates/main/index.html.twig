{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
{% endblock %}

{% block body %}
	<div>
		{% block header %}
			{% include 'main/header.html.twig' %}
		{% endblock %}
	</div>
	<div class="main-body">
		{% for room in rooms %}
			<a class="room-div" href="rooms/{{room.id}}">
					<img class="room-logo" src="{{ room.imgSource }}" alt="Logo">
					<h2 class="room-title">{{ room.name }}</h2>
			</a>
		{% endfor %}
	</div>
	<div>
		{% block footer %}
			{% include 'main/footer.html.twig' %}
		{% endblock %}
	</div>

{% endblock %}
